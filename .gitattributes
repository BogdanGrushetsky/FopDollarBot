# Auto detect text files and perform LF normalization
* text=auto

# TypeScript
*.ts text eol=lf
*.tsx text eol=lf

# JavaScript
*.js text eol=lf
*.jsx text eol=lf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf

# Config files
.eslintrc.js text eol=lf
.prettierrc text eol=lf
tsconfig.json text eol=lf
package.json text eol=lf
package-lock.json text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary

# Archives
*.zip binary
*.tar binary
*.gz binary
